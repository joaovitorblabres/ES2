<section class="demo-card-square mdl-card mdl-shadow--2dp card">
  <header class="header-top-offset">
    <%= image_tag 'logo.png', class: 'imglogo' %>
  </header>
  <div class="mdl-card__title mdl-card--expand">
    Acesse o sistema! (<%= resource_name %>)
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mdl-textfield__input' %>
        <%= f.label :email, class: 'mdl-textfield__label' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.label :password, class: 'mdl-textfield__label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'mdl-textfield__input' %>
      </div>
      <%= f.submit 'Prosseguir', class: 'righto mdl-button mdl-js-button mdl-button--raised mdl-button--accent' %>

      <div class="text-center">
        <%= link_to 'Cadastre-se', new_user_registration_path %>
      </div>
    <% end %>
  </div>
</section>
